{
  "name": "basic-website-template",
  "version": "0.0.1",
  "description": "Basic template for jade, scss, karma, mocha",
  "main": "index.js",
  "scripts": {
    "pug:watch": "pug src --out ./dist --watch",
    "scss:watch": "sass --watch src/scss:dist/css",
    "babel:watch": "babel src/js -d dist/js --ignore node_modules --watch",
    "test:watch": "mocha ",
    "webpack:watch": "webpack --watch",
    "serve": "concurrently \"npm run-script start\" \"browser-sync start --config bs-config.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "website"
  ],
  "author": "Cory Johnson",
  "license": "ISC",
  "dependencies": {
    "alertifyjs": "^1.11.1",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "babel": "^6.23.0",
    "babel-loader": "^8.0.2",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.4.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  }
}
